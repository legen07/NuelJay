doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="shortcut icon", href="opt-images/icons/favicon.png", type="image/x-icon")
    title NuelJay

    link(rel="preconnect" href="https://fonts.googleapis.com")
    link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Acme&family=Laila:wght@300;400;500;600;700&display=swap" rel="stylesheet")

    link(rel="stylesheet", href="style.css")

    style.
      @keyframes spinner{
        to{
          transform: rotate(360deg);
        }
      }

      body.js #preloader{
        display: none; 
      }

  body 

    #preloader(style="position: fixed; background-color: #eee9;inset: 0; z-index: 99;  backdrop-filter: blur(14px)")
      .pre-content(style=" background-color: #eee; height: 6rem; width: 6rem; border-radius: 1rem; display: grid; place-items: center; box-shadow: 0 0 2px #ffffff , 0 0 10px 4px #8886; transform: translate(-50%, -50%); left: 50%; top: 50%;position: absolute;")
        .spinner(style="height: 2rem; width: 2rem;  border-radius: 5rem; border: solid 2px #ddd; border-right: solid 2px #000; animation: spinner 600ms ease-out infinite;")

    script(type="text/javascript").
      setTimeout(function () {
        document.querySelector('body').classList.add('js');
      }, 9000)

    .container
      header 
        .head-logo 
          img(src="opt-images/icons/black-logo.webp", alt="Logo" width="100")

        nav 
          ul 
            li
              a(href="index.html")
                svg(icon="smart-home")
                span Home 
            li 
              a
                svg(icon="user-scan")
                span About 
            li
              a(href="services.html")
                svg(icon="camera-selfie")
                span Services
            li
              a(href="gallery.html")
                svg(icon="brand-google-photos")
                span Gallery

        .book-dark 
          button.book-a-session(modal="book-session")
            span Book a session
            svg(icon="camera")


      .sections
        include profile.pug
        block sections
        include hire_me.pug


        footer 
          span @NuelJay 2024, Design by Joe Legen. All rights reserved.

    include book_session.pug

  script( type="text/javascript" src="https://cdn.jsdelivr.net/npm/jquery/dist/jquery.min.js")
  script(type="module" src="./javascript/script.js")
  block scripts